%p#notice= notice

-if (@nvtrs > 0)
  .row
    .span6
      %h2= "Voter Transaction Records ("+number_with_delimiter(@nvtrs)+")"
    .span3
      = link_to 'Show Table', :show_xml => nil
      \|
      = link_to 'Show XML', :show_xml => true
    .span2
      %b= link_to "Download XML", format: 'xml'
    .span1#statebacknext
      = link_to 'Back', :back  
  %br
-else
  .row
    .span11
      %h2= "No Voter Transaction Records"
    .span1#statebacknext
      = link_to 'Back', :back  
-if (@nvtrs > 0)
  -if @showxml
    %table
      %pre= render partial: 'vtrs', formats: [ :xml ]
  -else
    %table{:style=>"text-align:center"}
      %tr
        %th VID
        %th &nbsp;
        %th Date
        %th &nbsp;
        %th Action
        %th &nbsp;
        %th Form
        %th &nbsp;
        %th LEO
        %th &nbsp;
        %th Note
        %th &nbsp;
        %th Comment
        %th &nbsp;
        %th Election
        %th
      - @voter_transaction_records.each do |vtr|
        -if ! vtr.archived
          %tr
            %td= vtr.vname
            %td
            %td= vtr.date
            %td
            %td= vtr.action
            %td
            %td= vtr.form
            %td
            %td= vtr.leo
            %td
            %td= vtr.note
            %td
            %td= vtr.note
            %td
            %td= Election.find(VoterTransactionLog.find(vtr.voter_transaction_log_id).election_id).name
            %td
            %td= link_to 'Show', vtr
