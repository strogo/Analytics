%p#notice= notice

-if VoterRecord.count>0
  .row
    .span11
      %h2= "All Voter Records ("+VoterRecord.count.to_s+")"
    .span1#statebacknext
      = link_to 'Back', :back  
  %br
  %table{:style=>"text-align:center"}
    %tr
      %th VID
      %th &nbsp;
      %th Gender
      %th &nbsp;
      %th Party
      %th &nbsp;
      %th Military
      %th &nbsp;
      %th Overseas
      %th &nbsp;
      %th Absentee
      %th &nbsp;
      %th Reg Date
    - VoterRecord.all.each do |vr|
      %tr
        %td= vr.vname
        %td
        %td= vr.gender
        %td
        %td= vr.party
        %td
        %td= vr.military
        %td
        %td= vr.overseas
        %td
        %td= vr.absentee
        %td
        %td= vr.regidate.to_s
-else
  .row
    .span11
      %h2= "No Voter Records"
    .span1#statebacknext
      = link_to 'Back', :back
