%p#notice= notice

%h2 Voter
%br
-label="State:"
%table{:style=>"padding:5px;margin:0px;"}
  %tr
    %td
      %b VID:
    %td= @voter.vuniq
  %tr 
    %td
      %b Election:
    %td= Election.find(@voter.election_id).namedate
%br
- if true
  %h3= 'Voter Transaction Records ('+@voter.vtrs.count.to_s+')'
  %br

  %table{:style=>"text-align:center"}
    %tr
      %th VID
      %th &nbsp;
      %th Date
      %th &nbsp;
      %th Action
      %th &nbsp;
      %th Form
      %th &nbsp;
      %th LEO
      %th &nbsp;
      %th Note
      %th &nbsp;
      %th Comment
      %th &nbsp;
      %th

    - @voter.voter_transaction_records.each do |vtr|
      %tr
        %td= vtr.vname
        %td
        %td= vtr.datime
        %td
        %td= vtr.action
        %td
        %td= vtr.form
        %td
        %td= vtr.leo
        %td
        %td= vtr.note
        %td
        %td= vtr.comment
        %td
        %td= link_to 'Show', vtr

%br
= link_to 'Back', voters_path
